%h1 Listing requests

%table
  %thead
    %tr
      %th Request type
      %th Requestor
      %th Courthouse
      %th Deadline at
      %th Slug
      %th
      %th
      %th

  %tbody
    - @requests.each do |request|
      %tr
        %td= request.request_type
        %td= request.requestor
        %td= request.courthouse
        %td= request.deadline_at
        %td= request.slug
        %td= link_to 'Show', request
        %td= link_to 'Edit', edit_request_path(request)
        %td= link_to 'Destroy', request, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

