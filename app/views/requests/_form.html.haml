= simple_form_for(@request) do |f|
  = f.error_notification

  .form-inputs
    = f.association :request_type, collection: @request_types, value_method: :id, include_blank: false
    %label
      Courthouse
    = f.simple_fields_for :courthouse do |c|
      = c.input :name
      = f.simple_fields_for :address do |a|
        .row
          .col-sm-6
            = a.input :city, label: false, placeholder: 'City', input_html: { class: 'form-control' }
          .col-sm-6
            = a.input :state, label: false, collection: Address.states, prompt: 'State', input_html: { class: 'form-control chosen-select' }
    
    = f.input :deadline_at

  .form-actions
    = f.button :submit
